// Challenge 2
areaOfCircle = (radius) => {
    const pi = Math.PI
    const area = pi * radius * radius
    return area.toFixed(4)
}

//calculate the area for radius 2
const area1 = areaOfCircle(2)
console.log(area1)

//calculate the area for radius 3
const area2 = areaOfCircle(3)
console.log(area2)

